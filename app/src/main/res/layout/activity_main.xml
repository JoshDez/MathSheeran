<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/green"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity" >

    <Space
        android:layout_width="match_parent"
        android:layout_height="35dp" />

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:backgroundTint="@color/nothing"
        app:cardElevation="0dp">

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="500dp"
            android:layout_height="130dp"
            android:layout_gravity="center"
            app:srcCompat="@drawable/plank" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:fontFamily="@font/shouter"
            android:text="MATHSHEERAN"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="48sp"
            android:textStyle="bold" />
    </androidx.cardview.widget.CardView>
    <Space
        android:layout_width="match_parent"
        android:layout_height="15dp" />

    <androidx.cardview.widget.CardView
        android:id="@+id/additionBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:backgroundTint="@color/add1"
        app:cardCornerRadius="25dp">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="145dp"
            android:layout_height="145dp"
            app:srcCompat="@drawable/addition" />

        <TextView
            android:id="@+id/textView"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/shouter"
            android:text="Addition"
            android:textAlignment="center"
            android:textColor="@color/add3"
            android:textSize="28sp"
            android:textStyle="bold" />
    </androidx.cardview.widget.CardView>
    <Space
        android:layout_width="match_parent"
        android:layout_height="15dp" />

    <androidx.cardview.widget.CardView
        android:id="@+id/subtractionBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:backgroundTint="@color/sub1"
        app:cardCornerRadius="25dp">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="145dp"
            android:layout_height="145dp"
            app:srcCompat="@drawable/subtraction" />

        <TextView
            android:id="@+id/textView2"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/shouter"
            android:text="Subtraction"
            android:textAlignment="center"
            android:textColor="@color/sub2"
            android:textSize="28sp"
            android:textStyle="bold" />
    </androidx.cardview.widget.CardView>
    <Space
        android:layout_width="match_parent"
        android:layout_height="15dp" />

    <androidx.cardview.widget.CardView
        android:id="@+id/multiplicationBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:backgroundTint="@color/times1"
        app:cardCornerRadius="25dp">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="145dp"
            android:layout_height="145dp"
            app:srcCompat="@drawable/multiplication" />

        <TextView
            android:id="@+id/textView3"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/shouter"
            android:text="Multiplication"
            android:textAlignment="center"
            android:textColor="@color/times3"
            android:textSize="28sp"
            android:textStyle="bold" />
    </androidx.cardview.widget.CardView>

</LinearLayout>